<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layoutDirection="rtl">

    <RatingBar
        android:id="@+id/comment_dialog_fragment_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/comment_dialog_fragment_edit_text"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_shape"
        android:fontFamily="@font/iran_sans_mobile"
        android:hint="@string/dialog_fragment_edit_text_hint"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comment_dialog_fragment_rating_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/comment_dialog_fragment_rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/comment_dialog_fragment_rating_bar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/comment_dialog_fragment_button_submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/filled_button_shape"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="@string/comment_dialog_fragment_submit_button_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comment_dialog_fragment_rating_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/comment_dialog_fragment_rating_bar"
        app:layout_constraintTop_toBottomOf="@+id/comment_dialog_fragment_edit_text" />

</android.support.constraint.ConstraintLayout>