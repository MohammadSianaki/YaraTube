<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_category_item"
        android:layout_width="@dimen/category_card_avatar_width"
        android:layout_height="@dimen/category_card_avatar_height"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_category_item"
        android:layout_alignTop="@id/iv_category_item"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toLeftOf="@id/iv_category_item"
        android:fontFamily="@font/iran_sans_mobile"
        android:textAlignment="center"
        android:textDirection="rtl" />


</RelativeLayout>